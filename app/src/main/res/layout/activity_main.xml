<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundmadlibs"
    tools:context="com.example.nathalie.nathalieborst_pset2.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/madlibslogo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Mad Libs! I will ask you to fill in words to complete a story. You won't be able to see the whole story untill you are done filling in all the missin words. That's part of the fun. Click below to get started ... "
            android:textAlignment="center"
            android:layout_marginBottom="15dp"
            tools:fontFamily="@font/biryani_light" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="goToFirst"
        android:layout_gravity="end"
        android:layout_marginEnd="10dp"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/doublearrows" />


</LinearLayout>
